@page
@model IndexModel
@{
    ViewData["Title"] = "Amanda Bone | Portfolio";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"]</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet" />
  <style>
    /* Base & colors */
    html {
      font-size: 14px;
      position: relative;
      min-height: 100%;
    }

    @@media (min-width: 768px) {
      html {
        font-size: 16px;
      }
    }

    body {
      margin: 0;
      margin-bottom: 60px;
      font-family: 'Inter', sans-serif;
      background-color: #f0f2f5;
      color: #333;
      line-height: 1.6;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    /* Header styling */
    .header {
      background-color: #6c63ff;
      padding: 1.5rem 0;
      text-align: center;
      box-shadow: 0 4px 10px rgba(108, 99, 255, 0.3);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .nav.container {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .logo {
      color: white;
      font-weight: 700;
      font-size: 1.8rem;
      letter-spacing: 2px;
      text-decoration: none;
    }

    /* Focus outlines */
    .btn:focus,
    .btn:active:focus,
    .btn-link.nav-link:focus,
    .form-control:focus,
    .form-check-input:focus {
      box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
      outline: none;
    }

    /* About section */
    .about-section {
      margin-top: 6rem;
      text-align: center;
    }

    .about-section h1 {
      color: #6c63ff;
      font-weight: 800;
      font-size: 3rem;
      letter-spacing: 1px;
      margin-bottom: 1rem;
    }

    .about-section p {
      max-width: 600px;
      margin: 0 auto 4rem auto;
      font-style: italic;
      font-size: 1.2rem;
      color: #555;
    }

    /* Contact section */
    .contact-section {
      text-align: center;
      font-size: 1.1rem;
      margin-bottom: 6rem;
    }

    .contact-section a {
      color: #ff6584;
      font-weight: 600;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .contact-section a:hover,
    .contact-section a:focus {
      color: #d94b6f;
      text-decoration: underline;
      outline: none;
    }

    /* Footer */
    .footer {
      text-align: center;
      font-size: 0.9rem;
      color: #666;
      border-top: 1px solid #ddd;
      padding: 1.5rem 0;
      user-select: none;
      margin-top: 4rem;
    }

    /* squirrel styling */
    #squirrel {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 64px;
      height: 64px;
      cursor: pointer;
      image-rendering: pixelated;
      transition: transform 0.2s ease;
      z-index: 10000;
      /* no border */
    }
  </style>
</head>
<body>
  <header class="header">
    <nav class="nav container">
      <a href="#" class="logo">Amanda</a>
    </nav>
  </header>

  <main class="container">
    <section id="about" class="about-section">
      <h1>Hello, I’m Amanda Bone</h1>
      <p>
        I’m a passionate web designer and developer who thrives on crafting clean, intuitive, and user-friendly web experiences.  
        I believe great design is about solving problems elegantly and creating connections through thoughtful detail and creativity.
      </p>
    </section>

    <section id="contact" class="contact-section">
      <h2>Contact Me</h2>
      <p>I made the squirrel at the bottom</p>
      <p>Feel free to reach out on 
        <a href="https://github.com/Amanda01-dev" target="_blank" rel="noopener noreferrer">GitHub</a> 
        or send me an email at 
        <a href="mailto:alchemy.amandaswork@gmail.com">alchemy.amandaswork@gmail.com</a>.
      </p>
    </section>
  </main>

  <footer class="footer">
    <p>© 2025 Amanda01-dev. All rights reserved.🐿️</p>
  </footer>

  <svg
    id="squirrel"
    role="img"
    aria-label="Pixel squirrel face"
    title="Squirrel"
    viewBox="0 0 16 16"
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Face base -->
    <rect x="3" y="4" width="10" height="10" fill="#A0522D" />
    <!-- Ears -->
    <rect x="2" y="3" width="3" height="3" fill="#5C3317" />
    <rect x="11" y="3" width="3" height="3" fill="#5C3317" />
    <!-- Eyes -->
    <rect x="6" y="7" width="2" height="2" fill="#000" />
    <rect x="9" y="7" width="2" height="2" fill="#000" />
    <!-- Nose -->
    <rect x="7" y="11" width="2" height="1" fill="#4B2E00" />
    <!-- Cheeks -->
    <rect x="5" y="10" width="2" height="2" fill="#C6834F" />
    <rect x="9" y="10" width="2" height="2" fill="#C6834F" />
  </svg>

  <script>
    const squirrel = document.getElementById('squirrel');
    const margin = 60; // proximity margin in pixels

    document.addEventListener('mousemove', (e) => {
      const rect = squirrel.getBoundingClientRect();
      const mouseX = e.clientX;
      const mouseY = e.clientY;

      const inXRange = mouseX >= rect.left - margin && mouseX <= rect.right + margin;
      const inYRange = mouseY >= rect.top - margin && mouseY <= rect.bottom + margin;

      if (inXRange && inYRange) {
        squirrel.style.transform = 'translateY(-2px)';
      } else {
        squirrel.style.transform = 'translateY(0)';
      }
    });
  </script>
</body>
</html>
